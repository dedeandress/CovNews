<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_news"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    app:cardBackgroundColor="@color/red"
    app:cardCornerRadius="@dimen/dp_10"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/ContentTextStyle.Bold"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="Di Rumah Bikin Gemuk? Ini 5 Cara Mudah Pangkas Lemak dan Tangkal Virus"
            android:textColor="@color/white"
            app:layout_constraintRight_toLeftOf="@id/iv_news_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_source"
            style="@style/ContentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="Source"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_source"
            style="@style/ContentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="VIVA News"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_title_source" />

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/ic_virus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

